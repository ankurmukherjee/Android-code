<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Addretailer" >

<LinearLayout
     android:isScrollContainer="true"
     android:id="@+id/scroll"
     android:orientation="vertical"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/edit_name_capsule"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_store_name"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="0.75"
            android:layout_marginTop="10dp"
            android:background="#F8F8F8"
            android:enabled="false"
            android:hint="@string/Name"
            android:shadowColor="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
    
     <LinearLayout
         android:id="@+id/edit_phone_capsule"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_below="@+id/edit_name_capsule"
         android:layout_marginTop="10dp"
         android:background="#FFFFFF"
         android:orientation="horizontal" >
        
         <EditText
            android:id="@+id/edit_store_contact"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="0.75"
            android:layout_marginTop="10dp"
            android:background="#F8F8F8"
            android:hint="@string/Phone"
            android:enabled="false"
            android:inputType="phone" />
         
          <ImageButton
            android:id="@+id/editphone"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />

    </LinearLayout>

    
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
     
     <LinearLayout
        android:id="@+id/edit_fmcg_capsule"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_phone_capsule"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >
        
        <EditText
            android:id="@+id/edit_fmcg"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:enabled="false"
            android:layout_weight="0.75"
            android:layout_marginTop="10dp"
            android:background="#F8F8F8"
            
            android:hint="@string/FMCG" />
        
         <ImageButton
            android:id="@+id/editfmcg"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />
         
      </LinearLayout>
      
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
      
      <LinearLayout
        android:id="@+id/edit_address_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_fmcg_capsule"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="#F8F8F8"
        
        android:orientation="vertical" >

     <EditText
         android:id="@+id/edit_street"
         android:layout_width="150dp"
         android:layout_height="35dp"
         android:enabled="false"
         android:layout_weight="0.75"
         android:layout_marginTop="10dp"
         android:hint="@string/Address"
         android:inputType="textPostalAddress" >
         
                 
     </EditText>
     
      <EditText
         android:id="@+id/edit_area"
         android:layout_width="150dp"
         android:layout_height="35dp"
         android:enabled="false"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="@string/Area"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
      <EditText
         android:id="@+id/edit_city"
         android:layout_width="150dp"
         android:layout_height="35dp"
         android:enabled="false"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="@string/City"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
     <ImageButton
            android:id="@+id/editaddress"
            android:layout_gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />
     
     </LinearLayout>
     
      <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
       <LinearLayout
        android:id="@+id/edit_devid_capsule"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_address_capsule"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

     <EditText
         android:id="@+id/edit_devid"
          android:layout_width="150dp"
            android:layout_height="25dp"
            android:enabled="false"
            android:layout_weight="0.75"
            android:layout_marginTop="10dp"
            android:background="#F8F8F8"
         android:hint="@string/Dev_id"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
     <ImageButton
            android:id="@+id/editdevid"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />
     
     </LinearLayout>
     
       <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
       
     <LinearLayout
        android:id="@+id/edit_odm_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_devid_capsule"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/edit_phone_capsule">

     <EditText
         android:id="@+id/edit_ODM"
         android:layout_width="150dp"
         android:layout_height="25dp"
         android:enabled="false"
         android:layout_weight="0.75"
         android:layout_marginTop="10dp"
         android:background="#F8F8F8"
         
         android:hint="ODM"
         android:inputType="textPostalAddress" />

     <ImageButton
            android:id="@+id/editodm"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />
     

     </LinearLayout>
     
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
         
         
     
     <LinearLayout
         android:id="@+id/edit_date_capsule"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/edit_ODM"
         android:background="#FFFFFF">
     
         <EditText
         android:id="@+id/edit_date"
          android:layout_width="150dp"
            android:layout_height="25dp"
            android:enabled="false"
            android:layout_weight="0.75"
            android:layout_marginTop="10dp"
            android:background="#F8F8F8"
            android:inputType="textPostalAddress"
         android:hint="dd-mm-yyyy" >

         <requestFocus />
     </EditText>
     
         <ImageButton
            android:id="@+id/editdate"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/editpen" />
     
            
     </LinearLayout>

     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
     <LinearLayout
         android:id="@+id/edit_check_capsule"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/edit_ODM"
         android:background="#FFFFFF" >

     <CheckBox
         android:id="@+id/edit_pan"
         android:layout_width="80dp"
         android:layout_weight=".3"
         android:layout_height="wrap_content"
         android:text="PAN"/>

     <CheckBox
         android:id="@+id/edit_addr_proof"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:layout_weight=".3"
         
         
         android:text="Addr Pf" />
     
     
     <CheckBox
         android:id="@+id/edit_shop_proof"
         android:layout_width="wrap_content"
         android:layout_weight=".3"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         
         android:text="Shop Proof" />
     
     </LinearLayout>
     
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="7dp"
        android:background="#2E64FE"/>
     
       
       <Button
           android:id="@+id/update"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="40dp"
           android:text="Update">
           
       </Button>

</LinearLayout>
       

</ScrollView>
