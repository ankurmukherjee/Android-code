<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Addretailer" >

<LinearLayout
     android:isScrollContainer="true"
     android:id="@+id/scroll"
     android:orientation="vertical"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content" >  
    
    <LinearLayout
        android:id="@+id/edit_name_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="vertical" >
        
        <EditText
            android:id="@+id/edit_store_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:inputType="textCapCharacters"
            android:background="#F8F8F8"
            android:hint="@string/Name"
            android:shadowColor="#000000" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
    
     <LinearLayout
         android:id="@+id/edit_phone_capsule"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/edit_name_capsule"
         android:layout_marginTop="10dp"
         android:background="#FFFFFF"
         android:gravity="left"
         android:orientation="vertical" >
        
         <EditText
            android:id="@+id/edit_store_contact"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#F8F8F8"
            android:hint="@string/Phone"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
     
     
     
     <LinearLayout
        android:id="@+id/edit_fmcg_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phone_capsule"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="vertical" >
        
        <EditText
            android:id="@+id/edit_fmcg"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#F8F8F8"
            android:hint="@string/FMCG" />
      </LinearLayout>
      
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
     
      <LinearLayout
        android:id="@+id/edit_address_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_fmcg_capsule"
        
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="vertical" >

     <EditText
         android:id="@+id/edit_street"
         android:layout_width="250dp"
         android:layout_height="25dp"
         android:background="#F8F8F8"
         android:ems="10"
         android:hint="@string/Street"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
     <EditText
         android:id="@+id/edit_area"
         android:layout_width="250dp"
         android:layout_height="25dp"
         android:background="#F8F8F8"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="@string/Area"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
     <EditText
         android:id="@+id/edit_city"
         android:layout_width="250dp"
         android:layout_height="25dp"
         android:background="#F8F8F8"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="@string/City"
         android:inputType="textPostalAddress" >
         
     </EditText>
     
     
     
     </LinearLayout>
     
      <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
     
       <LinearLayout
        android:id="@+id/edit_devid_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_address_capsule"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="vertical" >

     <EditText
         android:id="@+id/edit_devid"
         android:layout_width="match_parent"
         android:layout_height="25dp"
         android:background="#F8F8F8"
         android:ems="10"
         android:hint="@string/Dev_id"
         android:inputType="textCapCharacters">
         
     </EditText>
     
     </LinearLayout>
     
       <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
       
       <LinearLayout 
         android:id="@+id/Coordinates_capsule"
         android:layout_width="match_parent"
         android:layout_marginTop="10dp"
         android:layout_gravity="center"
         android:gravity="center"
         android:background="#F8F8F8"
         android:layout_height="40dp">

           <TextView
               android:id="@+id/xaxis"
               android:layout_width="100dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="Latitude" />

         <TextView
             android:id="@+id/yaxis"
             android:layout_width="100dp"
             android:layout_marginLeft="10dp"
             android:gravity="center"
             android:layout_height="30dp"
             android:text="Longitude" />

         <Button
             android:id="@+id/locate"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="wrap_content"
             android:layout_marginStart="3dp"
             android:layout_height="wrap_content"
             android:text="Locate" />
         
     </LinearLayout>
     
       <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
       
     <LinearLayout
        android:id="@+id/edit_odm_capsule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/edit_devid_capsule"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/edit_phone_capsule">

     <Spinner
         android:id="@+id/edit_ODM"
         android:layout_width="150dp"
         android:layout_weight="0.1"
         android:layout_height="40dp"
         android:layout_marginTop="10dp" />

     <EditText
         android:id="@+id/edit_date"
         android:layout_width="60dp"
         android:layout_height="40dp"
         android:layout_marginStart="3dp"
         android:layout_marginTop="15dp"
         android:layout_weight="0.5"
         android:ems="10"
         android:hint="dd-mm-yyyy" >

         <requestFocus />
     </EditText>

     </LinearLayout>
     
     <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop ="10dp"
        android:background="#0489B1"/>
     
     <LinearLayout
         android:id="@+id/edit_check_capsule"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_below="@+id/edit_ODM"
         android:background="#FFFFFF" >

     <CheckBox
         android:id="@+id/edit_pan"
         android:layout_width="80dp"
         android:layout_weight=".3"
         android:layout_height="wrap_content"
         android:text="PAN"/>

     <CheckBox
         android:id="@+id/edit_addr_proof"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:layout_toRightOf="@+id/scanner"
         android:layout_weight=".3"
         android:checked="false"
         android:text="Addr Pf" />
     
     <CheckBox
         android:id="@+id/edit_shop_proof"
         android:layout_width="wrap_content"
         android:layout_weight=".3"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:layout_toRightOf="@+id/keyboard"
         android:text="Shop Proof" />
     
     </LinearLayout>
     
     
       <Button
           android:id="@+id/save"
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:text="Save">
           
       </Button>

</LinearLayout>
       

</ScrollView>
